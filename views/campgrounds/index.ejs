<%- layout('layouts/boilerplate') %>





    <a class="btn btn-success new-camp-btn" href="/campgrounds/new">Create a new campground</a>
    <div id="cluster-map" class="mb-5 border border-1"></div>
   
        <% for(let campground of campgrounds){ %>
           <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <% if(campground.images.length){%>
                        <img  class="img-fluid" src="<%=campground.images[0].url%>" alt="">
                        <% } else {%>
                            <img class="img-fluid" src="" alt="">
                        <%} %>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <p class="card-text"><%= campground.description %></p>
                            <h5 class="card-title"> <%= campground.title %></h5>
                            <p class="card-text">
                                <small class="text-muted"><%= campground.location %></small>
                                </p>
                                <a class="btn btn-primary show-camp-btn" href="/campgrounds/<%=campground.id%>">View <%= campground.title %></a>

                        </div>
                    </div>
                </div>
            </div> 
            <% } %>
<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>'
    const campgrounds ={features: <%- JSON.stringify(campgrounds)%>}
</script>
<script src="/js/clusterMap.js"></script>